write_request    "demo/fetch_binary_servlet" "demo/fetch_binary_servlet"     false   false
write_response   "demo/fetch_binary_servlet" "image/png"                     true    true   "transport/demo/fetch_binary_servlet.js"
write_request    "demo/fetch_response_servlet" "demo/fetch_response_servlet" false   false
