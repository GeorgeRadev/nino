write_request    "portal/portlet/admin_requests.js"   "portal/portlet/admin_requests.js"            false   true
write_response   "portal/portlet/admin_requests.js"   "application/javascript;charset=UTF-8"        false   true   "transport/portal/portlet/admin_requests.js"
